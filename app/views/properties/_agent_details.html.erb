<div class="text-center pt-4 pb-4 ml-3">
    <div class="mb-2">
        <%= profile_picture @agent %>
    </div>
    <h3><strong><%= @agent.full_name %></strong></h3>
    <p><%= @agent.company%></p>
    
    <button class="btn btn-block btn-info text-uppercase" id="show-tel" data-telephone="<%= @agent.telephone %>"><i class="fas fa-phone">Call </button><br/>

    <%= link_to "Profile", profile_path(@agent.id), class:"btn btn-secondary text-uppercase" %>
    <button class="btn btn-success text-uppercase" data-toggle="modal" data-target="#contact-modal" >Email</button>
    
    
</div>
